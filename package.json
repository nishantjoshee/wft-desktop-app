{
  "name": "wft-desktop-app",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "watch": "nodemon --exec electron .",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": "Nishant",
  "license": "ISC",
  "build": {
    "appId": "com.waterflow.desktoputility",
    "productName": "WFT Desktop Utility",
    "win": {
      "requestedExecutionLevel": "requireAdministrator",
      "target": [
        "nsis",
        "zip"
      ]
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "auto-launch": "^5.0.6",
    "axios": "^1.6.5",
    "os-utils": "^0.0.14",
    "socket.io-client": "^4.7.4"
  },
  "devDependencies": {
    "electron": "^28.1.4",
    "electron-builder": "^24.9.1",
    "nodemon": "^3.0.3"
  }
}
